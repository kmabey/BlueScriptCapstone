@model Blue_Script.Setting

@using (Ajax.BeginForm("AddEditSetting", "Home", new AjaxOptions{ HttpMethod = "POST", UpdateTargetId = "tabs-3" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend><input id="Name" class="text-box single-line valid" type="text" value="@Model.Name" name="Name" onchange="this.form.submit()"> <span class="pull-right">@Html.ActionLink("X", "DeleteSetting", new { id = Model.ID })</span></legend>
		@Html.ValidationMessageFor(model => model.Name)
        @Html.HiddenFor(model => model.ID)

        <h5>Notes</h5>
        <div class="editor-field">
            <textarea id="Notes" class="text-box multi-line" name="Notes" rows="5" onchange="this.form.submit()">@Model.Notes</textarea>
        </div>

         <p>
                <input type="submit" value="Save" id="btnSave" name="cmd" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
        </p>
    </fieldset>
}
	
