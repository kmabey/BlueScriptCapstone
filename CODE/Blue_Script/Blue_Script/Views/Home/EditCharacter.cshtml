@model Blue_Script.Character

		   
@using (Ajax.BeginForm("EditCharacter", new AjaxOptions
{
	HttpMethod = "POST",
	OnSuccess = "updateCharacter"
}
))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>
			<input id="Name" class="text-box single-line valid" type="text" value="@Model.FullName" name="FullName" onchange="(this).form.submit();">
			<span class="pull-right">@Html.ActionLink("X", "DeleteCharacter", new { id = Model.CharacterID })</span>
		</legend>
		@Html.ValidationMessageFor(model => model.FullName)
        @Html.HiddenFor(model => model.CharacterID)
        <h5>Notes:</h5>
        <div class="editor-field">
            <input id="Notes" value="@Model.Notes" class="text-box multi-line" name="Notes" onchange="(this).form.submit();" />
        </div>

        <p>
                <input type="submit" value="Save" id="btnSave" name="cmd" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
        </p>
		<div class="btn btn-success btn-xs pull-right hideme" id="saveChar@(Model.CharacterID)">Saved</div>
		
    </fieldset>
}
	

